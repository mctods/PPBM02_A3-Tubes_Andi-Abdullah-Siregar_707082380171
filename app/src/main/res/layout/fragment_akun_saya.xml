<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AkunSayaFragment"
    android:background="#809506e5">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/psychedelicheader"
        android:orientation="vertical">
        <!--tools:context=".home"> -->
    </FrameLayout>
    <LinearLayout
        android:id="@+id/kotakbiru"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            android:orientation="vertical"
            android:backgroundTint="#90000000">

            <TextView
                android:id="@+id/header_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psychedelicfont"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="AKUN SAYA"
                android:textColor="#f7e001"
                android:textSize="18dp" />
        </androidx.cardview.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="230dp"
            android:src="@drawable/fotoprofil"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/foto"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fotoprofil"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/namasaya"
                android:layout_height="wrap_content"
                android:layout_below="@id/foto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Andi Abdullah Siregar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailsaya"
                android:layout_below="@+id/namasaya"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Email saya"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isiemail"
                android:layout_below="@+id/emailsaya"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="siregarandi14@gmail.com"
                android:textSize="14dp"
                android:padding="10dp"
                android:background="#509506e5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nim"
                android:layout_below="@+id/isiemail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="NIM"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isinim"
                android:layout_below="@+id/nim"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="707082380171"
                android:textSize="14dp"
                android:padding="10dp"
                android:background="#509506e5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kelas"
                android:layout_below="@+id/isinim"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Kelas"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isikelas"
                android:layout_below="@+id/kelas"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="D4SM-X-47-01"
                android:textSize="14dp"
                android:padding="10dp"
                android:background="#509506e5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dev"
                android:layout_below="@+id/isikelas"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Kontak Developer"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sosmed"
                android:layout_below="@+id/dev"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Sosial Media"
                android:textSize="14dp"
                android:padding="10dp"
                android:background="#509506e5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isikelas"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:textSize="10dp"
                android:text="www.andifest.com"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/rateapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="290dp"
        android:text="Nilai Aplikasi Saya !!!"
        android:textSize="17dp"
        android:textStyle="bold" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:stepSize="1"
        android:progressTint="#ff9521"/>
    <include layout="@layout/bottom_sheet_persistent" />

</FrameLayout>