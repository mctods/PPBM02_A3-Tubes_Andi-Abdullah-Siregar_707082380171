<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BerandaFragment"
    android:background="#809506e5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/psychedelicheader"
        android:orientation="vertical"
        tools:context=".home">

        <LinearLayout
            android:id="@+id/kotakbiru"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                android:orientation="vertical"
                android:backgroundTint="#90000000"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/header_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psychedelicfont"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Selamat Datang, "
                    android:textColor="#f7e001"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andi Siregar"
                    android:fontFamily="@font/psychedelicfont"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="30dp"
                    android:textColor="#f7e001"/>
            </androidx.cardview.widget.CardView>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/fotoprofil"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/history_1"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pesan"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/baseline_book_online_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pesan"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="38dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/jadwal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/baseline_calendar_month_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jadwal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="31dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/informasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/baseline_info_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="21dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>




        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:background="#809506e5">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="-25dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/history_2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="We The fest (WTF) - 27/01/23"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="50dp"
                        android:textColor="#fb5600"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="Sold"
                        />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/history_3"
                android:layout_below="@id/history_2"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="Red Asian Tour (Taylor Swift) - 27/01/23"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="55dp"
                        android:textColor="#38e702"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Idr 120.000"
                        />
                </androidx.cardview.widget.CardView>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/history_4"
                android:layout_below="@id/history_3"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="Coldplay - 21/11/23"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="55dp"
                        android:textColor="#38e702"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Idr 120.000"
                        />
                </androidx.cardview.widget.CardView>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_below="@id/history_4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="Blackpink - 13/12/23"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="55dp"
                        android:textColor="#38e702"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Idr 120.000"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="OASIS - 05/07/24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="55dp"
                        android:textColor="#38e702"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="Idr 120.000"
                        />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>